[user]
  name = <%= print("Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Email: "); STDOUT.flush; STDIN.gets.chomp %>
[core]
  excludesfile = /Users/mdesrosiers/.gitignore
  autocrlf = input
[color]
  ui = auto
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
  hist = log --pretty=format:\"%h | %ad | %s %Cgreen[%an]%Creset%Cred%d%Creset\" --graph --date=short
  oneline = log --pretty='%Cblue%h%Creset - %an - %Cgreen%s%Creset'
  rb = rebase
  who = shortlog -sn
[branch]
  autosetuprebase = always
[push]
  default = simple
[github]
  user = mdesrosiers
[mergetool]
  keepbackup = false
  keeptemporaries = false
  prompt = false
[mergetool "sourcetree"]
  cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true
[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path =
[status]
  submodulesummary = 1
[diff]
  submodule = log
